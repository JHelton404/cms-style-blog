{{! Homepage list of blogs & single blogs details }}
{{#each blogs}} <div class="card">

  <div class="card-header">
    <div class="card-title" style="font-size: 1.8rem;">
      <div>{{this.title}}</div>
    </div>
  </div>

  <div class="card-body">
    <div class="card-text"><strong>
        {{this.description}}</strong>
    </div>
    <br />
    <div class="card-text">
      <a href="/api/blogs/search/{{this.id}}">
        <em>
          Post by {{this.user.name}} on{{this.time}}
        </em>
      </a>
      <br />
      <br />
    </div>
  </div>

</div> {{/each}}